<%include ../partials/header %>
<div class="container">
    <div class=row>
        <div class="col-md-3">
            <p class="lead">Beyond The Tent</p>
            <div class=list-group>
                <li class="list-group-item">item 1</li>
                <li class="list-group-item">item 1</li>
                <li class="list-group-item">item 1</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive"src="<%=camp.image%>" alt=""> 
                <div class="caption-full">
                     <h4 class="pull-right">$9.00/night</h4>
                    <h4><a href=""><%=camp.name.toUpperCase()%></a></h4>
                    <p>
                         <%=camp.description%>
                    </p>
                    <p>
                        <em>Submitted By <%=camp.author.username%></em>
                   </p>
                </div> 
            </div>
            <div class="well">
                <div class="text-right">
                    <p>
                        <a class="btn btn-success" href="/campgrounds/<%=camp._id%>/comments/new">Add review</a>
                    </p>
                </div>
                <% camp.comments.forEach(function(comment){  %>
                    <div class="row">
                        <div class="col-md-12">
                                <strong><%=comment.author.username%></strong>
                                <span class="pull-right">9 days ago</span>
                                <p>
                                        <%=comment.text%>
                                </p>
                        </div>
                    </div>
                    
                <% })  %>
            </div>
        </div>
    </div>
</div>
<%include ../partials/footer %>